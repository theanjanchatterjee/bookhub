    <li data-target="#carousel-landing" data-slide-to="1"></li>
	<li data-target="#carousel-landing" data-slide-to="3"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <div class="container">
        <div class="row">
          <div class="col-md-7 carousel-img">
			<%#= link_to image_tag("slide1.jpg", :alt => "Slide1"), {:class => "img-responsive", :alt => "Responsive image"} %>
          </div>
          <div class="col-md-5 carousel-text">
            <h1>"A book is a dream that you hold in your hand."</h1>
            <h3>â€“Neil Gaiman</h3>
            
          </div>
        </div>
      </div>
    </div>
    <div class="item">
      <div class="container">
        <div class="row">
          <div class="col-md-7 carousel-img">
			<%#= link_to image_tag("slide2.jpeg", :alt => "Slide2"), {:class => "img-responsive", :alt => "Responsive image"} %>
          </div>
          <div class="col-md-5 carousel-text">
            <h1>Our Motto</h1>
            <h3>Your Choice. Your Budget.</h3>
            <p>Welcome to our family of book lovers. We know the pain when you eagerly want that refined novel but your budget doesn't permit. Henceforth, we are here to provide you the best stuff at best price. Promise!!</p>
          </div>
        </div>
      </div>
    </div>
	<div class="item">
      <div class="container">
        <div class="row">
          <div class="col-md-7 carousel-img">
			<%#= link_to image_tag("slide3.jpeg", :alt => "Slide3"), {:class => "img-responsive", :alt => "Responsive image"} %>
          </div>
          <div class="col-md-5 carousel-text">
            <h1>Our Services</h1>
            <h3>We are there at your doorstep</h3>
